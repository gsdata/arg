function arg_universitate_arg_core_butoane($nid,$type,$node){
	if($type == 'arg_universitate'){
		$options['query'] = array('nid-universitate' => $node['entity']->nid);
		$output = l('Adauga Facultate', 'node/add/arg-facultate', $options);
		return $output;
	}
}

